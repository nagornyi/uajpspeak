<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Dark base gradient for Night mode -->
    <item>
        <shape>
            <gradient
                android:angle="90"
                android:startColor="#FF1E1E1E"
                android:centerColor="#FF232323"
                android:endColor="#FF2B2B2B"
                android:type="linear" />
        </shape>
    </item>

    <!-- Subtle lighter stripes to mimic the daytime decorative effect but suitable for dark theme -->
    <item android:top="15dp" android:bottom="35dp">
        <shape android:shape="rectangle">
            <solid android:color="#20FFFFFF" />
        </shape>
    </item>

    <item android:top="25dp" android:bottom="25dp">
        <shape android:shape="rectangle">
            <solid android:color="#10FFFFFF" />
        </shape>
    </item>

    <item android:top="35dp" android:bottom="15dp">
        <shape android:shape="rectangle">
            <solid android:color="#20FFFFFF" />
        </shape>
    </item>
</layer-list>
