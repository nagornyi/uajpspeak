<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:ads="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arukai.uajpspeak.activity.FavouritesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/my_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="6dp"
        android:layout_above="@+id/ad_separator"
        android:scrollbars="vertical"/>

    <!-- Empty state view -->
    <LinearLayout
        android:id="@+id/empty_state"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ad_separator"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/favorite_24px"
            android:contentDescription="@string/empty_favourites_icon"
            android:alpha="0.3"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_favourites_title"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/empty_favourites_message"
            android:textSize="16sp"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:alpha="0.7"/>
    </LinearLayout>

    <!-- Separator line to visually distinguish ad from content -->
    <View
        android:id="@+id/ad_separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_above="@+id/ad_container"
        android:background="@color/ad_separator" />

    <!-- Container for ad with distinctive background at the bottom -->
    <LinearLayout
        android:id="@+id/ad_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="60dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/ad_placeholder_background"
        android:padding="4dp"
        android:gravity="center"
        android:orientation="vertical">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            ads:adSize="BANNER"
            ads:adUnitId="@string/main_screen_ad_id">
        </com.google.android.gms.ads.AdView>
    </LinearLayout>

</RelativeLayout>

