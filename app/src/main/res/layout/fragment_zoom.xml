<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/zoom_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    tools:context="com.arukai.uajpspeak.activity.ZoomFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zoomJapanese"
        android:textSize="18dp"
        android:drawableLeft="@drawable/jp"
        android:drawablePadding="10dp"
        android:text="This is a test phrase and I make it very long"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/zoomUkrainian"
        android:textSize="24dp"
        android:text="This is a test phrase and I make it very long to see how it will work with long phrases"
        android:gravity="center"
        android:drawablePadding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/zoomPhonetic"
        android:textSize="18dp"
        android:drawableLeft="@drawable/eye"
        android:drawablePadding="10dp"
        android:text="This is a test phrase and I make it very long"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:id="@+id/zoomSpeaker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/zoomUkrainian"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5dp"
        android:src="@drawable/speaker" />

</RelativeLayout>