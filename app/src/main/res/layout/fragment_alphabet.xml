<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/alphabet_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.arukai.uajpspeak.activity.AlphabetFragment">

    <ScrollView
        android:id="@+id/alphabetScroller"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">

        <RelativeLayout
            android:id="@+id/abetkaLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/abetkaImg"
                android:src="@drawable/abetka"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:adjustViewBounds="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/alphabetText"
                android:textSize="14dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/abetkaImg"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp" />

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>